{
  "name": "github-api-gql-next-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbo",
    "build": "next build",
    "start": "next start",
    "prepare": "husky install",
    "format": "prettier --write **/*.{ts,tsx}",
    "lint": "eslint . --ext ts --ext tsx",
    "generate-gql:hooks": "graphql-codegen -r dotenv/config --config ./app/graphql/hooks/codegen.yml && prettier --write ./app/graphql/hooks/__generated__.ts",
    "generate-gql:requests": "graphql-codegen -r dotenv/config --config ./app/graphql/requests/codegen.yml && prettier --write ./app/graphql/requests/__generated__.ts",
    "gql": "yarn generate-gql:hooks & yarn generate-gql:requests"
  },
  "dependencies": {
    "@apollo/client": "^3.8.4",
    "@mantine/core": "^7.0.0",
    "@mantine/hooks": "^7.0.0",
    "@types/node": "20.6.3",
    "@types/react": "18.2.22",
    "@types/react-dom": "18.2.7",
    "eslint": "8.49.0",
    "eslint-config-next": "13.5.2",
    "framer-motion": "^10.16.4",
    "graphql": "^16.8.1",
    "graphql-request": "^6.1.0",
    "next": "13.5.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "typescript": "5.2.2"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/client-preset": "^4.1.0",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-graphql-request": "^5.0.0",
    "@graphql-codegen/typescript-operations": "^4.0.1",
    "@graphql-codegen/typescript-react-apollo": "^3.3.7",
    "@tabler/icons-react": "^2.34.0",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "dotenv": "^16.3.1",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "prettier": "^3.0.3"
  }
}
